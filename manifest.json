{
    "manifest_version": 2,
    "name": "HistoryLink SmartCopy",
    "short_name": "SmartCopy",
    "description": "Tool for copying genealogical data into Geni.",
    "version": "1.52.2",
    "icons": { "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "storage",
        "*://*.geni.com/",
        "*://*.findagrave.com/",
        "*://*.familysearch.org/",
        "*://familysearch.org/",
        "*://*.wikitree.org/",
        "*://*.wikitree.com/",
        "*://*.werelate.org/",
        "*://*.billiongraves.com/",
        "*://billiongraves.com/",
        "*://*.ancestry.com/",
        "*://*.ancestry.com.au/",
        "*://*.ancestry.co.uk/",
        "*://*.ancestry.co.nl/",
        "*://*.ancestry.ca/",
        "*://*.ancestry.mx/",
        "*://*.ancestry.co/",
        "*://*.ancestry.se/",
        "*://*.ancestry.de/",
        "*://*.ancestry.dk/",
        "*://*.ancestry.es/",
        "*://*.ancestry.eu/",
        "*://*.ancestry.fr/",
        "*://*.ancestry.it/",
        "*://*.ancestry.nl/",
        "*://*.genealogy.com/",
        "*://*.myheritage.com/",
        "*://*.myheritage.cat/",
        "*://*.myheritage.co.il/",
        "*://*.myheritage.com.br/",
        "*://*.myheritage.com.hr/",
        "*://*.myheritage.com.pt/",
        "*://*.myheritage.com.tr/",
        "*://*.myheritage.cz/",
        "*://*.myheritage.de/",
        "*://*.myheritage.dk/",
        "*://*.myheritage.es/",
        "*://*.myheritage.fr/",
        "*://*.myheritage.hu/",
        "*://*.myheritage.it/",
        "*://*.myheritage.lt/",
        "*://*.myheritage.nl/",
        "*://*.myheritage.no/",
        "*://*.myheritage.pl/",
        "*://*.myheritage.se/",
        "*://*.myheritage.sk/",
        "*://historylink.herokuapp.com/",
        "*://maps.googleapis.com/"
    ]
}
